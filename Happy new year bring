    <div class="container">
        <h1 id="greet-head">Happy New Year 2026</h1>
        <p class="odia">ନୂତନ ବର୍ଷର ଅନେକ ଅନେକ ଶୁଭକାମନା!</p>
        <p class="wishing-name" id="display-name">Biswajit</p>
        <p>May this year bring you great joy and success!</p>

        <div class="input-box">
            <input type="text" id="name-input" placeholder="Enter your name">
            <br>
            <button class="btn-create" onclick="generate()">Create My Link</button>
            <br>
            <a href="#" id="wa-share" class="btn-wa" target="_blank" style="display:none;">Share on WhatsApp</a>
        </div>

        <div class="creator-tag">Website Created by <b>Biswajit</b></div>
    </div>

    <script>
        // Check for name in URL
        const urlParams = new URLSearchParams(window.location.search);
        const friendName = urlParams.get('n');
        if (friendName) {
            document.getElementById('display-name').innerText = decodeURIComponent(friendName);
            document.getElementById('greet-head').innerText = decodeURIComponent(friendName) + " is wishing you!";
        }

        function generate() {
            const name = document.getElementById('name-input').value;
            if (name) {
                const currentUrl = window.location.href.split('?')[0];
                const finalUrl = currentUrl + "?n=" + encodeURIComponent(name);
                
                // Show WhatsApp Button
                const waBtn = document.getElementById('wa-share');
                waBtn.style.display = "inline-block";
                waBtn.href = "https://api.whatsapp.com/send?text=See this New Year wish from " + name + ": " + finalUrl;
                
                alert("Link Created! Click the green WhatsApp button to share.");
            } else {
                alert("Please enter a name first!");
            }
        }
    </script>
